{% extends "layout.njk" %}

    {% block head %}
        <title>Foodfy - {{recipe.title}}</title>
    {% endblock %}

    {% block content %}
        <div class="container">
            <div class="recipe-description">
                <div class="image-description">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
                <h1>{{recipe.title}}</h1>
                <p>por {{recipe.author}}</p>
            </div>
            <div class="recipe-steps">
                <div class="ingredients">
                    <div class="topic">
                        <h1>Ingredientes</h1>
                        <button id="ingredients-button">ESCONDER</button>
                    </div>
                    <ul class="ingredients">
                        {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="preparation">
                    <div class="topic">
                        <h1>Modo de preparo</h1>
                        <button id="preparation-button">ESCONDER</button>
                    </div>
                    <div class="text-preparation">
                        {% for preparation in recipe.preparation %}
                        <p>{{preparation}}</p>
                        {% endfor %}
                    </div>
                </div>
                <div class="information">
                    <div class="topic">
                        <h1>Informações adicionais</h1>
                        <button id="information-button">ESCONDER</button>
                    </div>
                    <div class="text-information">
                        <p>{{recipe.information}}</p>
                    </div>
                </div>
            </div>
        </div>
        <script src="/script.js"></script>
    {% endblock %}